<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                    <com.vincan.rotatecircleimageview.RotateCircleImageView
                        android:id="@+id/headimage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/tom"
                        app:rciv_border_width="2dp"
                        app:rciv_border_padding="2dp"
                        app:rciv_border_style="rotate"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="31dp"
                    android:layout_toRightOf="@id/headimage"
                    android:text="useraname"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="25sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/search_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索次数"
                    android:layout_marginLeft="10sp"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐次数"
                    android:textSize="25sp"
                    android:layout_marginLeft="160dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获赞数"
                    android:textSize="25sp"
                    android:layout_marginLeft="310dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="25sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111"/>
                <TextView
                    android:textSize="25sp"
                    android:layout_marginLeft="180dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"/>
                <TextView
                    android:textSize="25sp"
                    android:layout_marginLeft="320dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="333"/>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mine_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <Button
        android:layout_marginBottom="30sp"
        android:textStyle="bold"
        android:id="@+id/out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"/>
</LinearLayout>